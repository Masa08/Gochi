<div>
		<h2>店員　編集</h2>

		<%= form_for(@staff) do |f| %>

		   <div class="field">
        <%= f.label :name %><br/>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
   	<div class="field">
   	  	<%= f.label :image %><br />
    		<%= f.attachment_field :image, autofocus: true, autocomplete: "image"%>
  	</div>
 		<div class="field">
        <%= f.label :introduction %><br/>
        <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
    </div>
		    <%= f.submit 'Update Staff' %>

		<% end %>

		<%= link_to "back", staffs_path %>

</div>
