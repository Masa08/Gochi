<h2>店員　新規登録</h2>

<%= form_for(@staff) do |f| %>

    <div class="field">
        <%= f.label :name %><br/>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
   	<div class="field">
   	  	<%= f.label :image %><br />
    		<%= f.attachment_field :image %>
  	</div>
 		<div class="field">
        <%= f.label :introduction %><br/>
        <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
    </div>
    <div class="actions">
    <%= f.submit 'Create Staff' %>
  	</div>
<% end %>
